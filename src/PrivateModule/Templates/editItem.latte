<div class="row">
	<div class="col-lg-6">
		<div class="row">
			<div class="col-lg-12">
				<p>Select any image of type jpg, png or gif.</p>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				{input item-image class=>'form-control'}
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-6">
				<strong>Alternative text</strong>
			</div>
			<div class="col-lg-6">
				{input item-alt class=>'form-control', placeholder=>'some text'}
			</div>
		</div><br>
		<div class="row">
			<div class="col-lg-6">
				<strong>Anchor</strong>
			</div>
			<div class="col-lg-6">
				{input item-anchor class=>'form-control', placeholder=>'some-text'}
			</div>
		</div>
	</div>
	<div class="col-lg-6">
		{ifset $editedItem}
			{control $editedItem->getId(), $editedItem}
		{/ifset}
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		{input item-type}
		{input item-itemId}
	</div>
</div>
<br>